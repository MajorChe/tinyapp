<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/urls">My URLs</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/urls/new">Create New URL</a>
        </li>
      </ul>
      <% if(!username) { %>
        <form class="form-inline" method="post" action="/login">
          <input class="form-control mr-sm-2" type="text" name="username">
          <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Login</button>
        </form>
      <% } else { %>
        <form class="form-inline" method="post" action="/logout">
          <p class="lead" style="margin-top: 15px; margin-right: 25px;">Logged in as <%= username %>!</p>
          <button type="submit" class="btn btn-outline-dark my-2 my-sm-0">Logout</button>
        </form>
        <% } %>
    </div>
  </nav>
</header>
